<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        >

        <Button
            android:id="@+id/botao_verdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botao_verdade"
            />

        <Button
            android:id="@+id/botao_mentira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botao_mentira"
            />

    </LinearLayout>



    <ImageButton
        android:id="@+id/botao_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_left"
        android:contentDescription="@string/botao_preview"
        android:layout_gravity="bottom|left"
        />
    -

    <ImageButton
        android:id="@+id/botao_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_right"
        android:contentDescription="@string/botao_next"
        android:layout_gravity="bottom|right"
        />

    <TextView
        android:id="@+id/versao_api_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        />

    <Button
        android:id="@+id/botao_cheat"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/botao_cheat"
        android:layout_gravity="bottom|center_horizontal"
        />
</FrameLayout>